            <Style
                x:Key="CancelButtonStyle"
                BasedOn="{StaticResource DefaultFirebaseAuthenticaionButtonStyle}"
                TargetType="{x:Type ui:FirebaseAuthenticaionButton}">
                <Setter Property="Width" Value="125" />
                <Setter Property="Content" Value="Cancel" />
                <Setter Property="Icon">
                    <Setter.Value>
                        <DrawingImage>
                            <DrawingImage.Drawing>
