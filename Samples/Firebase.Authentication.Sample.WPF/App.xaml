                                    RadiusY="0"
                                    Rect="0,0,64,64" />
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                        <GeometryDrawing Brush="#FF939598">
                            <GeometryDrawing.Geometry>
