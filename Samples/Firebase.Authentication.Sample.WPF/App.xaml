            </Style>

            <!--  Controls  -->
            <ControlTemplate x:Key="SettignsCard" TargetType="ContentControl">
                <Border
                    Margin="0,8,0,0"
                    Padding="8"
                    Background="#40bf8e43"
                    BorderBrush="#60c2811f"
                    BorderThickness="2"
                    CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Text="{TemplateBinding ContentStringFormat}" />
                        <TextBlock
                            Margin="0,18,0,0"
                            FontSize="14"
                            Opacity="0.7"
                            Text="{TemplateBinding Tag}"
                            TextWrapping="WrapWithOverflow" />

                        <ContentControl
                            Grid.Row="1"
                            Margin="0,4,0,0"
                            Padding="6"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Content}"
                            Opacity="0.7" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
