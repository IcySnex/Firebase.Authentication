<Window
    x:Class="Firebase.Authentication.Sample.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Firebase.Authentication.Sample.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="Gray"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ImageButton" TargetType="Button">
            <Setter Property="Width" Value="220" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#ffffff" />
            <Setter Property="Foreground" Value="#828282" />
            <Setter Property="Padding" Value="16,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="2">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="4"
                                    Direction="270"
                                    Opacity="0.2"
                                    ShadowDepth="3" />
                            </Border.Effect>

                            <Grid Margin="{TemplateBinding Padding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image Width="18" Height="18">
                                    <Image.Source>
                                        <DrawingImage>
                                            <DrawingImage.Drawing>
                                                <DrawingGroup ClipGeometry="M0,0 V120 H118 V0 H0 Z">
                                                    <DrawingGroup Opacity="1">
                                                        <DrawingGroup Opacity="1" Transform="1,0,0,1,-332,-639">
                                                            <DrawingGroup Opacity="1" Transform="1,0,0,1,332,639">
                                                                <DrawingGroup Opacity="1">
